<.header>
  Listing Message lines
  <:actions>
    <.link patch={~p"/conversation/#{@room}/message_lines/new"}>
      <.button>New Message line</.button>
    </.link>
  </:actions>
</.header>

<.table
  id="message_lines"
  rows={@streams.message_lines}
  row_click={fn {_id, message_line} -> JS.navigate(~p"/conversation/#{message_line.conversation_id}/message_lines/#{message_line}") end}
>
  <:col :let={{_id, message_line}} label="Conversation"><%= message_line.conversation_id %></:col>
  <:col :let={{_id, message_line}} label="Body"><%= message_line.body %></:col>
  <:action :let={{_id, message_line}}>
    <div class="sr-only">
      <.link navigate={~p"/conversation/#{message_line.conversation_id}/message_lines/#{message_line}"}>Show</.link>
    </div>
    <.link patch={~p"/conversation/#{message_line.conversation_id}/message_lines/#{message_line}/edit"}>Edit</.link>
  </:action>
  <:action :let={{id, message_line}}>
    <.link
      phx-click={JS.push("delete", value: %{id: message_line.id}) |> hide("##{id}")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>

<.modal
  :if={@live_action in [:new, :edit]}
  show
  id="message_line-modal"
  on_cancel={JS.patch(~p"/conversation/#{@room}/message_lines")}>
  <.live_component
    module={LoadTestsWeb.MessageLineLive.FormComponent}
    id={@message_line.id || :new}
    title={@page_title}
    action={@live_action}
    message_line={@message_line}
    patch={~p"/conversation/#{@room}/message_lines"}
  />
</.modal>
